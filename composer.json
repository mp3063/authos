{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "laravel/laravel",
    "type": "project",
    "description": "The skeleton application for the Laravel framework.",
    "keywords": ["laravel", "framework"],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "barryvdh/laravel-dompdf": "^3.1",
        "filament/filament": "^4.0",
        "laravel/fortify": "^1.28",
        "laravel/framework": "^12.0",
        "laravel/passport": "^13.1",
        "laravel/socialite": "^5.23",
        "laravel/tinker": "^2.10.1",
        "maatwebsite/excel": "^3.1",
        "spatie/laravel-activitylog": "^4.10",
        "spatie/laravel-permission": "^6.21"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "friendsofphp/php-cs-fixer": "^3.88",
        "larastan/larastan": "^3.7",
        "laravel/boost": "^1.1",
        "laravel/dusk": "^8.3",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.24",
        "laravel/sail": "^1.41",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "nunomaduro/phpinsights": "^2.13",
        "phpmd/phpmd": "^2.15",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^11.5.3",
        "vimeo/psalm": "^6.13"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan filament:upgrade"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite --kill-others"
        ],
        "test": [
            "@php artisan config:clear --ansi",
            "@php artisan test"
        ],
        "test:unit": [
            "@php artisan config:clear --ansi",
            "@php artisan test --testsuite=Unit"
        ],
        "test:feature": [
            "@php artisan config:clear --ansi",
            "@php artisan test --testsuite=Feature"
        ],
        "test:coverage": [
            "@php artisan config:clear --ansi",
            "XDEBUG_MODE=coverage ./vendor/bin/phpunit --coverage-text --coverage-clover=coverage/clover.xml --coverage-html=coverage/html"
        ],
        "cs:check": [
            "./vendor/bin/pint --test"
        ],
        "cs:fix": [
            "./vendor/bin/pint"
        ],
        "analyse": [
            "./vendor/bin/phpstan analyse --memory-limit=1G"
        ],
        "analyse:baseline": [
            "./vendor/bin/phpstan analyse --generate-baseline=phpstan-baseline.neon --memory-limit=1G"
        ],
        "phpmd": [
            "./vendor/bin/phpmd app,config,database,routes text phpmd.xml"
        ],
        "insights": [
            "@php artisan insights --no-interaction --min-quality=80 --min-complexity=80 --min-architecture=80 --min-style=80"
        ],
        "insights:verbose": [
            "@php artisan insights -v"
        ],
        "security:check": [
            "@php -r \"echo 'Checking composer dependencies for security issues...' . PHP_EOL;\"",
            "@composer audit"
        ],
        "quality": [
            "@cs:check"
        ],
        "quality:fix": [
            "@cs:fix"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
