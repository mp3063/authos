# EditorConfig helps maintain consistent coding styles across different editors and IDEs
# See https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
indent_size = 4
max_line_length = 120

[*.blade.php]
indent_size = 4
max_line_length = 120

[*.{js,jsx,ts,tsx,vue}]
indent_size = 2
max_line_length = 100

[*.{json,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[{composer.json,package.json}]
indent_size = 4

[Makefile]
indent_style = tab
