      {
        "key": "token",
        "value": "{{accessToken}}",
        "type": "string"
      }
    ]
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "exec": [
          "// Auto-set content type for POST/PUT requests",
          "if (request.method === 'POST' || request.method === 'PUT') {",
          "    if (!pm.request.headers.has('Content-Type')) {",
          "        pm.request.headers.add({",
          "            key: 'Content-Type',",
          "            value: 'application/json'",
          "        });",
          "    }",
          "}"
        ],
        "type": "text/javascript"
      }
    },
    {
      "listen": "test",
      "script": {
        "exec": [
          "// Global test for rate limiting headers",
          "if (pm.response.headers.has('X-RateLimit-Limit')) {",
          "    pm.test('Rate limiting headers present', function () {",
          "        pm.response.to.have.header('X-RateLimit-Limit');",
          "        pm.response.to.have.header('X-RateLimit-Remaining');",
          "        pm.response.to.have.header('X-RateLimit-Reset');",
          "    });",
          "}",
          "",
          "// Auto-extract access token from authentication responses",
          "if (pm.response.code === 200 || pm.response.code === 201) {",
          "    const responseJson = pm.response.json();",
          "    if (responseJson.access_token || (responseJson.data && responseJson.data.access_token)) {",
          "        const token = responseJson.access_token || responseJson.data.access_token;",
          "        pm.collectionVariables.set('accessToken', token);",
          "        console.log('Access token extracted and saved to collection variables');",
          "    }",
          "}"
        ],
        "type": "text/javascript"
      }
    }
  ],
