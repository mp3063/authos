# Staging Environment Configuration
# Copy this file to staging.env and update with your actual values

# Server Configuration
SERVER_HOST=staging.example.com
SERVER_USER=deploy
DEPLOY_PATH=/var/www/authos

# Application URL
APP_URL=https://staging.authos.example.com

# Database Configuration (for backup purposes)
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=authos_staging
DB_USERNAME=authos
DB_PASSWORD=

# Deployment Options
KEEP_RELEASES=5
BACKUP_BEFORE_DEPLOY=true

# Notification Settings
SLACK_WEBHOOK_URL=
NOTIFICATION_EMAIL=
