<?xml version="1.0"?>
<ruleset name="AuthOS PHPMD Rules"
         xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0 http://pmd.sf.net/ruleset_xml_schema.xsd"
         xsi:noNamespaceSchemaLocation="http://pmd.sf.net/ruleset_xml_schema.xsd">
    <description>
        PHP Mess Detector rules for AuthOS Laravel application
    </description>

    <!-- Clean Code Rules -->
    <rule ref="rulesets/cleancode.xml">
        <!-- Allow else expressions (common in Laravel) -->
        <exclude name="ElseExpression"/>
        <!-- Allow static access (Laravel facades) -->
        <exclude name="StaticAccess"/>
        <!-- Allow boolean flags in methods (common in Laravel) -->
        <exclude name="BooleanArgumentFlag"/>
    </rule>

    <!-- Code Size Rules -->
    <rule ref="rulesets/codesize.xml">
        <!-- Exclude overly strict complexity metrics -->
        <exclude name="ExcessiveMethodLength"/>
        <exclude name="ExcessiveClassLength"/>
        <exclude name="CyclomaticComplexity"/>
        <exclude name="NPathComplexity"/>
    </rule>

    <!-- Adjusted Code Size Rules -->
    <rule ref="rulesets/codesize.xml/CyclomaticComplexity">
        <properties>
            <property name="reportLevel" value="15"/>
        </properties>
    </rule>

    <rule ref="rulesets/codesize.xml/NPathComplexity">
        <properties>
            <property name="minimum" value="300"/>
        </properties>
    </rule>

    <rule ref="rulesets/codesize.xml/ExcessiveMethodLength">
        <properties>
            <property name="minimum" value="150"/>
        </properties>
    </rule>

    <rule ref="rulesets/codesize.xml/ExcessiveClassLength">
        <properties>
            <property name="minimum" value="1500"/>
        </properties>
    </rule>

    <!-- Design Rules -->
    <rule ref="rulesets/design.xml">
        <!-- Allow coupling (Laravel dependencies) -->
        <exclude name="CouplingBetweenObjects"/>
    </rule>

    <!-- Naming Rules -->
    <rule ref="rulesets/naming.xml">
        <!-- Allow short variable names (common in loops) -->
        <exclude name="ShortVariable"/>
        <!-- Allow long variable names (descriptive) -->
        <exclude name="LongVariable"/>
    </rule>

    <!-- Adjusted Naming Rules -->
    <rule ref="rulesets/naming.xml/ShortVariable">
        <properties>
            <property name="minimum" value="2"/>
        </properties>
    </rule>

    <rule ref="rulesets/naming.xml/LongVariable">
        <properties>
            <property name="maximum" value="30"/>
        </properties>
    </rule>

    <!-- Unused Code Rules -->
    <rule ref="rulesets/unusedcode.xml"/>

    <!-- Controversial Rules (disabled - too strict for Laravel) -->
    <!--
    <rule ref="rulesets/controversial.xml"/>
    -->
</ruleset>
